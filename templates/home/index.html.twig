{% extends 'base.html.twig' %}

{% block title %}Welcome to Duckbook{% endblock %}

{% block body %}
    <!-- Ajout du style bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Section d'accueil -->
    <div class="container-fluid bg-primary text-white p-5 text-center">
        <h1 class="display-3">Welcome to Duckbook!</h1>
        <p class="lead">The social network for ducks. Share your thoughts, connect with friends, and explore the flock!</p>
    </div>

    <!-- Section principale avec des liens vers login et register -->
    <div class="container text-center my-5">
        <p class="fs-4">Join our flock today!</p>
        <div class="d-flex justify-content-center gap-4">
            <!-- Lien vers la page d'inscription -->
            <a href="{{ path('app_register') }}" class="btn btn-primary btn-lg">Sign Up</a>
            <!-- Lien vers la page de connexion -->
            <a href="{{ path('app_login') }}" class="btn btn-success btn-lg">Log In</a>
        </div>
    </div>

    <!-- Section Footer -->
    <div class="container text-center mt-4">
        <p class="text-muted">&copy; {{ "now"|date("Y") }} Duckbook - All Rights Reserved</p>
    </div>

    <!-- Ajout des scripts Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

{% endblock %}
