{% extends 'base.html.twig' %}

{% block title %}Ducks{% endblock %}

{% block body %}

    <h1>Ducks</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Duckname</th>
                <td>{{ duck.duckname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ duck.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ duck.roles ? duck.roles|json_encode : '' }}</td>
            </tr>
            <tr>
