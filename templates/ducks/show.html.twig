                <td>{{ duck.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ducks_index') }}">back to list</a>

    <a href="{{ path('app_ducks_edit', {'id': duck.id}) }}">edit</a>

