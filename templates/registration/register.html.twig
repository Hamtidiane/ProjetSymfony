{% extends 'base.html.twig' %}

{% block title %}Create New Duck{% endblock %}

{% block body %}
    <div class="container py-5 d-flex justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <h2 class="text-center fw-bold mb-4" style="color: #1877F2;">Create Your Duck Account</h2>

                    {{ form_start(registrationForm) }}
                    <div class="mb-3">
                        {{ form_row(registrationForm.firstname, { 'attr': {'class': 'form-control', 'placeholder': 'Enter your first name'} }) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.lastname, { 'attr': {'class': 'form-control', 'placeholder': 'Enter your last name'} }) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.duckname, { 'attr': {'class': 'form-control', 'placeholder': 'Choose your duck name'} }) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control', 'placeholder': 'Enter your email'} }) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword, { 'attr': {'class': 'form-control', 'placeholder': 'Create a password'} }) }}
                    </div>
                    <div class="form-check mb-4">
                        {{ form_row(registrationForm.agreeTerms, { 'attr': {'class': 'form-check-input'} }) }}
                        <label class="form-check-label" for="agreeTerms">
                            I agree to the <a href="#" class="text-primary">Terms and Conditions</a>
                        </label>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill">Create Account</button>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="{{ path('app_ducks_index') }}" class="btn btn-link text-primary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
{% endblock %}
